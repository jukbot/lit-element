{
  "name": "lit-html-element",
  "version": "0.6.10",
  "description": "A base class for creating web components using lit-html",
  "main": "lib/lit-element.js",
  "module": "lib/lit-element.mjs",
  "jsnext:main": "lib/lit-element.mjs",
  "browser": "dist/lit-element.min.js",
  "types": "lib/lit-element.d.ts",
  "files": [
    "lit-element.js",
    "/src/",
    "/lib/",
    "!/docs"
  ],
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build": "rollup -c",
    "lint": "tslint --project ./",
    "test": "npm run build && wct --npm && npm run lint",
    "checksize": "uglifyjs lit-element.js -mc --toplevel | gzip -9 | wc -c"
  },
  "author": "Kenneth Rohde Christiansen <kenneth.christiansen@gmail.com>",
  "homepage": "https://github.com/kenchris/lit-element",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kenchris/lit-element.git"
  },
  "dependencies": {
    "lit-html": "^0.7.1"
  },
  "devDependencies": {
    "rollup": "^0.51.8",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-typescript2": "^0.8.2",
    "rollup-plugin-uglify": "^2.0.1",
    "tslint": "^5.7.0",
    "typescript": "^2.6.1",
    "uglify-es": "^3.1.10",
    "web-component-tester": "^6.3.0"
  }
}
